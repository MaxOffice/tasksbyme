{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string",
            "metadata": {
                "description": "A globally unique name for the Tasks by Me web app, using lower-case letters, digits and - only. It will be deployed as https://WEBAPPNAME.azurewebsites.net",
                "displayName": "Web App Name"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "The ID of the Microsoft 365 tenant to which this web app will be connected.",
                "displayName": "Tenant ID"
            }
        },
        "clientId": {
            "type": "string",
            "metadata": {
                "description": "The Client ID using which this web app will connect to the Microsoft 365 tenant.",
                "displayName": "Client ID"
            }
        },
        "clientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "The Client secret using which this web app will connect to the Microsoft 365 tenant.",
                "displayName": "Client Secret"
            }
        },
        "sessionSecret": {
            "type": "securestring",
            "defaultValue": "[concat('sess-', newGuid())]",
            "metadata": {
                "description": "A random string using which session data in this web app will be encrypted.",
                "displayName": "Session Secret"
            }
        },
        "gitRepoUrl": {
            "type": "string",
            "defaultValue": "https://github.io/maxoffice/tasksbyme",
            "metadata": {
                "description": "The Git repository from which this web app will be deployed.",
                "displayName": "Git Repository URL"
            }
        },
        "gitRepoBranch": {
            "type": "string",
            "defaultValue": "main",
            "metadata": {
                "description": "The branch of the Git repository from which this web app will be deployed.",
                "displayName": "Git Repository Branch"
            }
        },
        "hostingPlanSku": {
            "type": "object",
            "defaultValue": {
                "name": "F1",
                "tier": "Free"
            },
            "allowedValues": [
                {
                    "name": "F1",
                    "tier": "Free"
                },
                {
                    "name": "B1",
                    "tier": "Basic"
                },
                {
                    "name": "S1",
                    "tier": "Standard"
                },
                {
                    "name": "P1v2",
                    "tier": "PremiumV2"
                },
                {
                    "name": "P1v3",
                    "tier": "PremiumV3"
                }
            ],
            "metadata": {
                "description": "The pricing tier for the App Service Plan",
                "displayName": "Hosting Plan SKU"
            }
        }
    },
    "variables": {
        "hostingPlanName": "[concat(parameters('webAppName'), '-plan')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2022-03-01",
            "name": "[variables('hostingPlanName')]",
            "location": "[resourceGroup().location]",
            "sku": "[parameters('hostingPlanSku')]",
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-03-01",
            "name": "[parameters('webAppName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "NODE|22-lts",
                    "appSettings": [
                        {
                            "name": "TENANT_ID",
                            "value": "[parameters('tenantId')]"
                        },
                        {
                            "name": "CLIENT_ID",
                            "value": "[parameters('clientId')]"
                        },
                        {
                            "name": "CLIENT_SECRET",
                            "value": "[parameters('clientSecret')]"
                        },
                        {
                            "name": "SESSION_SECRET",
                            "value": "[parameters('sessionSecret')]"
                        },
                        {
                            "name": "PORT",
                            "value": "8080"
                        },
                        {
                            "name": "NODE_ENV",
                            "value": "production"
                        },
                        {
                            "name": "REDIRECT_URI",
                            "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net/auth/callback')]"
                        },
                        {
                            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                            "value": "false"
                        }
                    ]
                },
                "httpsOnly": true
            }
        },
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "2022-03-01",
            "name": "[concat(parameters('webAppName'), '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ],
            "properties": {
                "repoUrl": "[parameters('gitRepoUrl')]",
                "branch": "[parameters('gitRepoBranch')]",
                "isManualIntegration": true
            }
        }
    ],
    "outputs": {
        "webAppUrl": {
            "type": "string",
            "value": "[uri(concat('https://', parameters('webAppName'), '.azurewebsites.net'),'/')]"
        }
    }
}